<h1>Users Index</h1>

<div class="user-index d-flex">
  <div style="width: 100%">
    <h3>Customers</h3>
    <% @users.each do |user| %>
      <% if user.manager == false && user.fixer == false %>
        <div class="user-card">
          <p>First name : <%= user.first_name %></p>
          <p>Last name : <%= user.last_name %></p>
          <p><%= link_to "User Details", user_path(user.id), class:"btn btn-danger" %></p>
          <p><%= link_to "Delete", user_path(user.id), method: :delete, data: {confirm: "Are you sure?"}, class:"text-danger" %></p>
        </div>
      <% end %>
    <% end %>
  </div>

  <div style="width: 100%">
    <h3>Fixers</h3>
    <% @users.each do |user| %>
      <% if user.manager == false && user.fixer == true %>
        <div class="user-card">
          <p>First name : <%= user.first_name %></p>
          <p>Last name : <%= user.last_name %></p>
          <p><%= link_to "User Details", user_path(user[:id]), class:"btn btn-danger" %></p>
          <p><%= link_to "Delete", user_path(user[:id]), method: :delete, data: {confirm: "Are you sure?"}, class:"text-danger" %></p>
        </div>
      <% end %>
    <% end %>
  </div>

</div>

<p><%= link_to "Home", root_path, class: "btn btn-primary" %></p>
