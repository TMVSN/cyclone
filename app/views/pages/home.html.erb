<% if user_signed_in? %>

  <p>Current role :</p>
    <% if current_user.manager == true && current_user.fixer == false %>
    <p>Manager</p>
  <% elsif current_user.manager == false && current_user.fixer == true %>
    <p>Fixer</p>
  <% else %>
    <p>Customer</p>
  <% end %>

  <p><%= link_to "New User", new_user_path, class: "btn btn-success" %></p>
  <p><%= link_to "Users index", users_path, class: "btn btn-secondary" %></p>
  <p><%= link_to "New order", new_order_path, class: "btn btn-info" %></p>
  <p><%= link_to "Orders", orders_path, class: "btn btn-warning" %></p>
  <p><%= link_to "log out", destroy_user_session_path, class: "btn btn-primary" %></p>
<% else %>
  <%= link_to "Sign in", new_user_session_path, class: "btn btn-danger" %>
<% end %>
